record (bo, "$(NAME)$(FIELDDEV)$(BITFUNC)_CMD") {
    field (DESC, "$(DESC)")
    field (ONAM, "On")
    field (ZNAM, "Off")
    field (OUT,  "$(NAME)$(BYTEFUNC)_SP.$(BITNUM)")
    field (FLNK, "$(NAME)$(BYTEFUNC)_SP")
}

